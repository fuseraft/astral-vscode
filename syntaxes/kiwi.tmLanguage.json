{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Kiwi",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#number"
		},
		{
			"include": "#boolean"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.kiwi",
					"match": "#.*"
				},
				{
					"name": "comment.block.double-number-sign.kiwi",
					"begin": "##",
					"end": "##",
					"patterns": [
						{
							"name": "punctuation.definition.comment.kiwi",
							"match": "(?<=##).*"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.kiwi",
					"match": "\\b(if|elsif|else|import|print|println|delete|module|class|abstract|private|static|override|def|lambda|try|catch|do|end|in|while|for|return|break|next)\\b"
				},
				{
					"name": "variable.other.kiwi",
					"match": "\\@[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"name": "storage.type.kiwi",
					"match": "\\b(Integer|Double|Boolean|String|List|Hash|Object|Lambda)\\b"
				}
			]
		},
		"number": {
			"name": "constant.numeric.kiwi",
			"match": "\\b-?(0|[1-9]\\d*)(\\.\\d+)?([eE][+-]?\\d+)?\\b"
		},
		"boolean": {
			"name": "constant.language.boolean.kiwi",
			"match": "\\b(true|false)\\b"
		}
	},
	"scopeName": "source.kiwi"
}