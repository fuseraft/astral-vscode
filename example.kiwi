def sieve_of_eratosthenes(@limit)
  @isPrime = []
  for @i in [0..@limit] do
     @isPrime << true
  end

  @isPrime[0] = false
  @isPrime[1] = false

  @p = 2

  while @p * @p <= @limit do
    if @isPrime[@p]
      @multiple = @p * 2
      while @multiple <= @limit do
        @isPrime[@multiple] = false
        @multiple += @p
      end
    end

    @p += 1
  end

  # Collect all prime numbers
  @primes = []
  for @i in [0..@limit] do
    if @isPrime[@i]
      @primes << @i
    end
  end

  return @primes
end

for @prime, @index in sieve_of_eratosthenes(30) do
  println "${@index}:\t${@prime}"
end